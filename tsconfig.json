{
  "compilerOptions": {
      "allowJs": true,
      "target": "esnext",
      "module": "esnext",
      "checkJs": true,
      "strict": true,
      "noImplicitAny": false,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "noEmit": true,
      "isolatedModules": false, // 将每个文件作为单独的模块
      "baseUrl": ".",
      "types": ["node", "webpack-env", "element-plus/global"],
      "paths": {
          "@/*": ["src/*"]
      },
      "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}


